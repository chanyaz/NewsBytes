<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ravi.apps.android.newsbytes.HeadlinesFragment"
    android:layoutDirection="locale">

    <FrameLayout
        android:id="@+id/headline_framelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/spacer"
        android:nextFocusDown="@+id/adview">

        <!-- Displays a list of news headlines and thumbnails -->
        <ListView
            android:id="@+id/headlines_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/grey"
            android:dividerHeight="0.5sp">
        </ListView>

        <!-- Displays status message in empty list -->
        <TextView
            android:id="@+id/status_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/msg_status_loading"
            android:gravity="center"
            android:fontFamily="sans-serif-condensed"
            style="@android:style/TextAppearance.Large"
            android:contentDescription="@string/msg_status_loading"
            android:textDirection="locale">
        </TextView>

    </FrameLayout>

    <View
        android:id="@+id/spacer"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_above="@+id/adview"
        android:background="@color/colorPrimary"/>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"
        android:nextFocusUp="@+id/headline_framelayout">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>


